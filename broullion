var wizards = ['Hermione', 'Neville', 'Gandalf'];

// Get the position element
let position = document.getElementsByClassName('main__content__recipe__cards');

// Create markup
position.innerHTML = '<ul>' + wizards.map(function (wizard) {
	return '<li>' + wizard + '</li>';
}).join('') + '</ul>';


